{
  "enabled": true,
  "name": "Post-Task Code Validation",
  "description": "Automatically runs lint and tests after agent completes a task to catch regressions",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run `npm run lint` and then `npm test` to validate no regressions were introduced. If either fails, report the errors."
  }
}
